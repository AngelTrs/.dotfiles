## some useful aliases
alias dir ls
alias less more
alias zless zmore
alias bzless bzmore
alias reconnect "close; cache flush; cd ."

# My alias
alias seedbox-folder lcd /data/share/downloads/seedbox
alias pg pget -n 5
alias mpg mirror -c --use-pget-n=5
alias mpl mirror -c --parallel=3 
alias mr mirror -R
alias q queue

set ssl:ca-file "/home/haloboy/.local/share/lftp/lets-encrypt-r3.pem"
